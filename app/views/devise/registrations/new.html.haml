%h2 会員情報入力
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    .field-label
      = f.label 'ニックネーム'
    .field-input
      = f.text_field :nickname, placeholder: '例)フリマ太郎'
  .field
    .field-label
      = f.label 'メールアドレス'
    .field-input
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'PC・携帯どちらでも可'
  .field
    .field-label
      = f.label :password
    .field-input
      = f.password_field :password, autocomplete: "new-password", placeholder: '7文字以上の半角英数字'
  .field
    .field-label
      = f.label :encrypted_password
    .field-input
      = f.password_field :encrypted_password, autocomplete: "new-password", placeholder: '7文字以上の半角英数字'
  .field
    = f.label 'お名前(全角)'
    .field-first-name-input
      = f.text_field :first_name, placeholder: '山田'
    .field-last-name-input
      = f.text_field :last_name, placeholder: '彩'
  .field
    = f.label 'お名前カナ(全角)'
    .field-first-name-kana-input
      = f.text_field :first_name_kana, placeholder: 'ヤマダ'
    .field-last-name-kana-input
      = f.text_field :last_name_kana, placeholder: 'アヤ'
  .field
    = f.label '生年月日'
    %br/
    = f.date_select :birthday, {start_year: 1900, end_year: 2100}
  .actions
    = f.submit '次へ進む'
