.account-page
  = render "header"
  .account-page__content
    %h2.account-page__content__signup-head
      アカウントをお持ちでない方はこちら
    .account-page__content__signup-btn
      = button_to "新規登録", new_user_registration_path, method: :get, class: "btn"
    .account-page__content__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .account-page__content__form__main
          .account-page__content__form__main__group
            .account-page__content__form__main__group__box
              .account-page__content__form__main__group__box__input
                = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: "input-field"
        .account-page__content__form__main
          .account-page__content__form__main__group
            .account-page__content__form__main__group__box
              .account-page__content__form__main__group__box__input
                = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: "input-field"
          .account-page__content__form__main__submit
            = f.submit "ログイン", class: "submit"
        = link_to "パスワードをお忘れの方", new_password_path(resource_name)
  = render "footer"